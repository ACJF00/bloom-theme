  </div>
  <div>
    <div class="histoire-resume">
      <div class="histoire-resume-text">
        {% if section.settings.title %}
          <h2 class="title-style-1">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.paragraph1 %}
          <p>{{ section.settings.paragraph1 }}</p>
        {% endif %}
        {% if section.settings.paragraph2 %}
          <p>{{ section.settings.paragraph2 }}</p>
        {% endif %}
      </div>
      <div class="histoire-resume-img">
        <img
          src="{{ section.settings.image | img_url: 'x800' }}"
          alt="{{ section.settings.image | escape }}"
          class="hidden-phone"
        >
        <img
          src="{{ section.settings.mobile_image | img_url: 'x800' }}"
          alt="{{ section.settings.mobile_image | escape }}"
          class="hidden-tablet-and-up"
