<section id="section-{{ section.id }}">
<div class="process-main-container">
         <div class="process-container">
      <div class="process-container-img">
        <img src="{{ section.settings.image | img_url: 'x800' }}" alt="{{ section.settings.image | escape }}">
      </div>
           <div id="curved-arrow-down">
           <img src="https://cdn.shopify.com/s/files/1/0501/3562/9982/files/process-arrow_430x.png?v=1681204185#" alt="Process Arrow Transition" />
           </div>
           <div class="process-txt-video-container">
           <div class="process-title-container">
                     <h2 class="title-style-1">{{section.settings.title}}</h2>
        <h3>{{section.settings.subheading}}</h3>
           </div>
      <div class="process-container-txt">
        <iframe width="560" height="315" src="{{ section.settings.video_url }}" id="placeholder-video-process" frameborder="0" allowfullscreen></iframe>
</div>
           </div>
    </div>
              {%- if section.settings.button_1_text != blank %}
              <div class="SectionHeader__ButtonWrapper">
                <div class="ButtonGroup ButtonGroup--spacingSmall">
                  {%- if section.settings.button_1_text != blank -%}
                    <a href="{{ section.settings.button_1_link }}" class="ButtonGroup__Item Button">{{ section.settings.button_1_text | escape }}</a>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
    </div>
</section>

    {% schema %}
      {
      "name": "Histoire - Process",
      "settings": [
        {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#ffffff"
    },
              {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading",
      "default": "Sub-heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Title"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
        {
  "type": "url",
  "id": "video_url",
  "label": "A Shopify-hosted video"
},
                {
          "type": "text",
          "id": "button_1_text",
          "label": "Text Button"
        },
        {
          "type": "url",
          "id": "button_1_link",
          "label": "Link Button"
        }
      ],
      "presets": [
          {
            "name": "Histoire - Process",
            "category": "Charly MUZIOTTI"      
          }
        ]
      }
      {% endschema %}

